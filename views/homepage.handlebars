
<div class="row">
  <div class="col-auto">
    <h2>Welcome, to the Tech Blog {{username}}!</h2>
  </div>
</div>

{{#each posts as |posts| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by {{user.username}} on {{format_date post.createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.body}}
    </p>
  </div>
</div>
{{/each}}

